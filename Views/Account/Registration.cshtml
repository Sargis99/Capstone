@model MyCompany.Models.RegistrationRequestModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="~/MyImages/myLogo.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        Chess-Up Company
    </title>
    <link href="~/css/material-kit.css" rel="stylesheet" />
    <link href="~/css/demo.css" rel="stylesheet" />
    <link href="~/css/vertical-nav.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
</head>
<body class="login-page sidebar-collapse">
    <nav class="navbar navbar-color-on-scroll navbar-transparent    fixed-top  navbar-expand-lg " color-on-scroll="100" id="sectionsNav">
        <div class="container">
            <div class="navbar-translate">
                <a class="navbar-brand">
                    <div class="logo-big">
                        <img src="~/MyImages/myLogo.png" class="img-fluid">
                    </div>

                    <div class="logo-small">
                        <img src="~/MyImages/Logopink.png" class="img-fluid">
                    </div>
                    <h7>Chess-Up</h7>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <li class="dropdown nav-item">

                        <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                            <i class="material-icons">apps</i> Main
                        </a>

                        <div class="dropdown-menu dropdown-with-icons">
                            <a asp-controller="Home" asp-action="Index" class="dropdown-item">
                                <i class="material-icons">store</i> Home
                            </a>
                            <a asp-controller="Home" asp-action="AboutUs" class="dropdown-item">
                                <i class="material-icons">account_balance</i> About Us
                            </a>
                            <a asp-controller="Home" asp-action="ContactUs" class="dropdown-item">
                                <i class="material-icons">location_on</i> Contact Us
                            </a>
                            <a asp-controller="Home" asp-action="StackOverflowQuestions" class="dropdown-item">
                                <i class="material-icons">list</i> Forum
                            </a>
                        </div>
                    </li>
                    <li class="dropdown nav-item">
                        <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                            <i class="material-icons">view_day</i>Learning
                        </a>
                        <div class="dropdown-menu dropdown-with-icons">
                            <a asp-controller="Problem" asp-action="ProblemIndex" class="dropdown-item">
                                <i class="material-icons">content_paste</i> Exercises
                            </a>
                            <a asp-controller="Problem" asp-action="QuizIndex" class="dropdown-item">
                                <i class="material-icons">assignment</i> Test
                            </a>
                            <a asp-controller="RequestForm" asp-action="ChoosRequests" class="dropdown-item">
                                <i class="material-icons">dns</i> Requests
                            </a>
                        </div>
                    </li>
                    <li class="dropdown nav-item">
                        <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                            <i class="material-icons">line_style</i> Story
                        </a>
                        <div class="dropdown-menu dropdown-with-icons">
                            <a asp-controller="TrinerRequestForm" asp-action="DoneRequests" class="dropdown-item">
                                <i class="material-icons">view_quilt</i> Completed Trainer Requests
                            </a>
                            <a asp-controller="RequestForm" asp-action="DoneRequests" class="dropdown-item">
                                <i class="material-icons">view_day</i>Completed Financial Requests
                            </a>
                            <a asp-controller="Home" asp-action="Review" class="dropdown-item">
                                <i class="material-icons">art_track</i> Reviews and Feedback
                            </a>
                        </div>
                    </li>
                    <li class="dropdown nav-item">
                        @if (!User.Identity.IsAuthenticated || (User.Identity.IsAuthenticated && User.IsInRole("Admin")))
                        {
                            <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                                <i class="material-icons">view_carousel</i> Sections
                            </a>
                            <div class="dropdown-menu dropdown-with-icons">
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <a asp-controller="Account" asp-action="UserRequestIndex" class="dropdown-item">
                                        <i class="material-icons">person_add</i>Users
                                    </a>
                                }
                                else if (!User.Identity.IsAuthenticated)
                                {
                                    <a asp-controller="Account" asp-action="Login" class="dropdown-item">
                                        <i class="material-icons">fingerprint</i> Login Page
                                    </a>
                                    <a asp-controller="Account" asp-action="Registration" class="dropdown-item">
                                        <i class="material-icons">person_add</i> Signup Page
                                    </a>
                                }
                            </div>
                        }
                    </li>
                    <li class="dropdown nav-item">
                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                                <i class="material-icons">view_carousel</i> Social
                            </a>
                            <div class="dropdown-menu dropdown-with-icons">
                                <a asp-controller="Account" asp-action="Profile" asp-route-UserName="@User.Identity.Name" class="dropdown-item">
                                    <i class="material-icons">account_circle</i>Profile
                                </a>
                                <a asp-controller="Account" asp-action="Users" class="dropdown-item">
                                    <i class="material-icons">people</i> Users
                                </a>
                                <a asp-controller="Messenger" asp-action="Chats" class="dropdown-item">
                                    <i class="material-icons">email</i> My Chats
                                </a>

                            </div>
                        }
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="button-container nav-item iframe-extern" style="padding-left: 10px; margin-top: -10px !important;">
                            <a class="btn btn-light btn-round btn-block btn-primary" asp-action="SignOut" asp-controller="Account">Sign out</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="page-header header-filter" style="        background-image: url('https://ugc.futurelearn.com/uploads/images/86/01/86011044-5c67-46bd-93e0-9bb7fe1bae15.jpg');
        background-size: cover;
        background-position: top center;
        min-height: 100% !important;
        height: 100% !important;
        max-height: 100% !important;
">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-8 col-sm-8 ml-auto mr-auto" style=" margin: 56px">

                    <form asp-controller="Account" asp-action="Registration" class="form text-center" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card card-hidden">
                            <div class="card-header card-header-primary text-center">
                                <h4 class="card-title">Registration</h4>
                            </div>

                            <div class="card-body">
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="form-group input-group col-lg-12  m-t-reg">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">face</i>
                                            </span>
                                            <div>
                                                <input class="form-control" asp-for="@Model.Name" style="inline-size: 400px;" placeholder="Name" required>
                                                <span class="bmd-help">This field is required.</span>
                                            </div>
                                        </div>

                                        @*@Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Name" })*@
                                        @Html.ValidationMessageFor(model => model.Name)
                                    </div>
                                    <div class="form-group input-group col-lg-12  m-t-reg">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">face</i>
                                            </span>
                                        </div>
                                        <div>
                                            <input class="form-control" asp-for="@Model.SurName" style="inline-size: 400px;" placeholder="Surname" required>
                                            <span class="bmd-help">This field is required.</span>
                                        </div>
                                        @*@Html.TextBoxFor(model => model.SurName, new { @class = "form-control", @placeholder = "SurName" })*@
                                        @Html.ValidationMessageFor(model => model.SurName)
                                    </div>
                                    <div class="form-group input-group col-lg-12  m-t-regt bmd-form-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" style="padding-top: 12px;">
                                                <i class="material-icons">group</i>
                                            </span>

                                            @using MyCompany.Utilities
                                            <select class="selectpicker" asp-for="@Model.UserType" data-style="select-with-transition" title="Select User Type" data-size="7" required>
                                                <option value="2">Trainer User</option>
                                                <option value="3">User</option>
                                            </select>

                                        </div>
                                        @*@Html.DropDownListFor(model => model.UserType, new List<SelectListItem>
                                            { new SelectListItem{Text="User", Value="True",Selected=true},
                                              new SelectListItem{Text="TrainnerUser", Value="False"}})*@
                                        @*@Html.DropDownListFor(model => model.UserType, new SelectList(Enum.GetValues(typeof(UserType))), string.Empty, new { @class = "form-control", @placeholder = "User Type" })*@
                                        @Html.ValidationMessageFor(model => model.UserType)
                                    </div>
                                    <div class="form-group input-group col-lg-12 m-t-reg ">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">phone</i>
                                            </span>
                                        </div>
                                        <div>
                                            <input class="form-control" asp-for="@Model.Phone" style="inline-size: 400px;" placeholder="Phone" required>
                                            <span class="bmd-help">This field is required.</span>
                                        </div>
                                        @*@Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Phone" })*@
                                        @Html.ValidationMessageFor(model => model.Phone)
                                    </div>
                                    <div class="form-group input-group col-lg-12 m-t-reg">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">mail</i>
                                            </span>
                                        </div>
                                        <div>
                                            <input class="form-control" asp-for="@Model.Email" style="inline-size: 400px;" placeholder="Email" required>
                                            <span class="bmd-help">This field is required.</span>
                                        </div>
                                        @*@Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email" })*@
                                        @Html.ValidationMessageFor(model => model.Email)
                                    </div>
                                    <div class="form-group input-group col-lg-12 m-t-reg">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">lock_outline</i>
                                            </span>
                                        </div>
                                        <input class="form-control" data-val="true" data-val-requires="The Password field is required" id="Password" 
                                               placeholder="Password" name="Password" type="password" minlength="8" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9]).{8,12}$" title="Password must have one capital, one special character and one numerical character. It can not start with a special character or a digit."  required/>
                                        @Html.ValidationMessageFor(model => model.Password)
                                    </div>
                                    <div class="form-group input-group col-lg-12  m-t-regt">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">account_circle</i>
                                            </span>
                                        </div>
                                        <div>
                                            <input class="form-control" asp-for="@Model.About" style="inline-size: 400px;" placeholder="About" required>
                                        </div>
                                        @*@Html.TextBoxFor(model => model.About, new { @type = "text" })*@
                                        @Html.ValidationMessageFor(model => model.About)
                                    </div>

                                    <div class="form-group input-group col-lg-12  m-t-regt bmd-form-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">face</i>
                                            </span>
                                        </div>
                                        @Html.LabelFor(model => model.Avatar)
                                        @Html.TextBoxFor(model => model.Avatar, new { @type = "file", @class = "bmd-form-group", Style = "height: 101% !important; padding-left: 32px!important;" })
                                        @Html.ValidationMessageFor(model => model.Avatar)
                                    </div>
                                </div>
                                <div class="text-center m-t-reg">
                                    <button class="btn btn-primary btn-round" type="submit" onclick="Signup()">SignUp</button>
                                </div>

                                @*<div class="form-group">
                                        <button id="myModal" asp-controller="Account" asp-action="Registration" type="submit" class="btn btn-primary btn-round">Submit</button>
                                    </div>*@
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="copyright float-right">
                &copy;
                <script>
                    document.write(new Date().getFullYear())
                </script>, made with <i class="material-icons">favorite</i> by
                <strong>BetterSolutions</strong> for a better world.
            </div>
        </div>
    </footer>
    <script type="text/javascript" src="~/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/popper.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap-material-design.min.js"></script>
    <script type="text/javascript" src="~/js/moment.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap-datetimepicker.js"></script>
    <script type="text/javascript" src="~/js/nouislider.min.js"></script>
    @*<script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>*@
    <script type="text/javascript" src="~/js/bootstrap-tagsinput.js"></script>
    <script type="text/javascript" src="~/js/bootstrap-selectpicker.js"></script>
    <script type="text/javascript" src="~/js/jasny-bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/jquery.flexisel.js"></script>
    <script type="text/javascript" src="~/js/modernizr.js"></script>
    <script type="text/javascript" src="~/js/vertical-nav.js"></script>
    <script type="text/javascript" src="~/js/demo.js"></script>
    <script type="text/javascript" src="~/js/material-kit.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>